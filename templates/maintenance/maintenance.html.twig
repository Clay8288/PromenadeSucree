{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	- Site en maintenance
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/maintenance.css') }}">
	<style>
		.main-title {
			display: none;
		}
	</style>
{% endblock %}

{% block main %}
	<main class="maintenance">

		<div class="logoPS">
			<img src="{{ asset('img/logoPSs.png') }}" alt="Logo Promenade Sucrée" class="logo">
		</div>

		<div class="maintenance-text">
			<p>On arrive bientôt pour régaler vos papilles !
			</p>
			<p>En attendant retrouvez nous sur notre page Instagram ou passez votre commande par email.</p>
			<p>A très vite !</p>
		</div>

		<div class="network">
			<div class="instagram">
				<a href="https://www.instagram.com/promenadesucree/?hl=fr" target="_blank">
					<i class="fab fa-instagram"></i>
				</a>
			</div>
		</div>

	</main>

{% endblock %}
